{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "at any time"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "gitlabci",
    "terraform",
    "helm-values",
    "kubernetes",
    "ansible",
    "pip_requirements"
  ],
  "docker-compose": {
    "enabled": true,
    "fileMatch": ["(^|/)docker-compose\\.ya?ml$"],
    "pinDigests": false
  },
  "terraform": {
    "enabled": true,
    "fileMatch": ["(^|/)\\.tf$"]
  },
  "helm-values": {
    "enabled": true,
    "fileMatch": ["(^|/)values\\.ya?ml$"]
  },
  "kubernetes": {
    "enabled": true,
    "fileMatch": ["\\.ya?ml$"]
  },
  "labels": [
    "renovate",
    "dependencies"
  ],
  "assignees": [
    "@root"
  ],
  "dependencyDashboard": true,
  "REDACTED_203b14db": "ü§ñ Renovate Dependency Dashboard",
  "packageRules": [
    {
      "description": "OpenTofu/Terraform providers",
      "matchManagers": ["terraform"],
      "labels": ["renovate", "infrastructure"],
      "commitMessagePrefix": "üèóÔ∏è [INFRA]",
      "automerge": false
    },
    {
      "description": "Helm charts",
      "matchManagers": ["helm-values"],
      "labels": ["renovate", "helm"],
      "commitMessagePrefix": "‚éà [HELM]"
    },
    {
      "description": "Critical Matrix services",
      "matchDatasources": ["docker"],
      "labels": ["renovate", "critical"],
      "commitMessagePrefix": "üîí [CRITICAL]",
      "automerge": false,
      "matchPackageNames": ["/synapse/", "REDACTED_54172810", "/postgres/"]
    },
    {
      "description": "Frontend services",
      "labels": ["renovate", "frontend"],
      "commitMessagePrefix": "üé®",
      "matchPackageNames": ["/element-web/", "/synapse-admin/"]
    },
    {
      "description": "Security services",
      "labels": ["renovate", "security"],
      "commitMessagePrefix": "üîê",
      "matchPackageNames": ["/crowdsec/"]
    },
    {
      "description": "Major updates",
      "matchUpdateTypes": ["major"],
      "labels": ["renovate", "major-update"],
      "commitMessagePrefix": "‚ö†Ô∏è [MAJOR]"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}