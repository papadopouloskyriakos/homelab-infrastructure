{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Amsterdam",
  "schedule": [
    "after 10pm on sunday"
  ],
  "docker-compose": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)docker-compose\\.ya?ml$/"
    ],
    "pinDigests": false
  },
  "labels": [
    "renovate",
    "dependencies"
  ],
  "assignees": [
    "@root"
  ],
  "dependencyDashboard": true,
  "REDACTED_203b14db": "ü§ñ Renovate Dependency Dashboard",
  "packageRules": [
    {
      "description": "Critical Matrix services",
      "matchDatasources": [
        "docker"
      ],
      "labels": [
        "renovate",
        "critical"
      ],
      "commitMessagePrefix": "üîí [CRITICAL]",
      "automerge": false,
      "matchPackageNames": [
        "/synapse/",
        "REDACTED_54172810",
        "/postgres/"
      ]
    },
    {
      "description": "Frontend services",
      "labels": [
        "renovate",
        "frontend"
      ],
      "commitMessagePrefix": "üé®",
      "matchPackageNames": [
        "/element-web/",
        "/synapse-admin/"
      ]
    },
    {
      "description": "Security services",
      "labels": [
        "renovate",
        "security"
      ],
      "commitMessagePrefix": "üîê",
      "matchPackageNames": [
        "/crowdsec/"
      ]
    },
    {
      "description": "Major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "renovate",
        "major-update"
      ],
      "commitMessagePrefix": "‚ö†Ô∏è [MAJOR]"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "vulnerability"
    ]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
